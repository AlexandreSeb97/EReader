/* CSS file for account/home.html */

@font-face {
	font-family : 'FragmentCore';
	src : url('../../font/FragmentCore.otf');
	}

@font-face {
	font-family : 'Asgalt';
	src : url('../../font/Asgalt.ttf');
	}
	
@font-face {
	font-family : 'Inglobal';
	src : url('../../font/Inglobal.ttf');
	}

header {
	width:100%;
	height:60px;
	background-color:rgb(182,187,252);
	margin-top:10px;
	}
	
header nav {
	display:inline-block;
	margin-left:1%;
	}
	
header .navbar-brand {
	font-size:240%;	
	font-family: FragmentCore ;
	color:rgb(238,238,238);
	display:inline-block;
	}
	
.nav-items {
	position:absolute;
	top:3.5%;
	right:10%;
	}
	
.nav-items a {
	display:inline-block;
	width:100px;
	height:30px;
	}
	
.link {
	text-align:center;
	margin:0 1px;
	color:white;
	padding:4px;
	}
	
.link:hover {
	text-decoration:none;
	border-radius:6px;
	background-color:white;
	color:rgb(182,187,252);
	}
	
.main {
	width:63%;
	height:575px;
	
	position:absolute;
	top:75px;
	border: 1px solid rgb(182,187,252);
	}
	
.main .thumbnail {
	width:100%;
	height:100%;
	}
	
.main .thumbnail img {
	position:relative;
	top:175px;
	}
	
.main .thumbnail .bar {
	position:relative;
	top:80px;
	display:inline-block;
	width:100%;
	height:120px;
	background-color:black;
	opacity:0.4;
	color:white;
	font-size:75px;
	}
	
.menu {
	width:20%;
	height:575px;
	
	position:absolute;
	top:75px;
	left:71.75%;
	border:1px solid rgb(182,187,252);
	}
	
.menu .login {
	width:99%;
	height:27.5%;
	margin-top:0.5%;
	margin-left:0.5%;
	background-color:white;
	border-bottom:1px solid rgb(182,187,252);
	}
	
.menu .login input {
	display:inline-block;
	width:256px;
	height:45px;
	margin-top:5px;
	margin-left:5px;
	line-height:10px;
	
	padding:7px 10px;
	font-size:15px;
	
	color:gray;
	
	font-family:Candara;
	border: solid 1px #ddd;
	}
	
.menu .login input[type='submit']:hover{
	color:white;
	background-color:rgb(182,187,252);
	}
	
.menu .login input[type='submit']{
	color:rgb(182,187,252);
	border:1px solid rgb(182,187,252);
	background-color:white;
	margin-bottom:6px;
	}
	
.menu .whats {
	width:99%;
	height:34%;
	margin-top:0.5%;
	margin-left:0.5%;
	background-color:white;
	border-bottom:1px solid rgb(182,187,252);
	padding-bottom:5px;
	}
	
.menu .whats span {
	display:inline-block;
	width:100%;
	background-color:rgb(182,187,252);
	color:white;
	padding:7px 13px;
	text-align:center;
	font-family:Corbel;
	font-size:15px;
	margin-bottom:7px;
	}
	
.menu .whats div div {
	display:inline-block;
	width:100%;
	padding:7px 13px;
	text-align:left;
	font-family:Asgalt;
	font-size:20px;
	margin-bottom:2px;
	}
	
.menu .recents {
	display:inline-block;
	width:100%;
	height:38.5%;
	}
	
.menu .recents .head {
	display:inline-block;
	width:100%;
	height:14%;
	text-align:center;
	padding-top:5px;
	background-color:rgb(182,187,252);
	color:white;
	margin-bottom:1%;
	font-weight:100;
	font-family:Corbel;
	font-size:15px;
	}
	
.menu .recents .post {
	display:inline-block;
	width:100%;
	height:41%;
	overflow:hidden;
	border-bottom:1px solid rgb(182,187,252);
	}
	
.menu .recents .post .header {
	display:inline-block;
	padding:8px 5px;
	width:100%;
	background-color:white;
	color:rgb(182,187,252);
	border-bottom:1px solid rgb(182,187,252);
	}
	
.menu .recents .post .header .author {
	font-family:Euphemia;
	}

.menu .recents .post .summary {
	padding:4px;
	font-size:13px;
	font-family:Inglobal;
	}
	
#signup {
	width:30%;
	height:250px;
	position:absolute;
	top:125px;
	left:-9999px;
	background-color:white;
	border-radius:4px;
	border:2px solid rgb(182,187,252);
	opacity:0.9;
	}
	
#signup form {
	position:relative;
	left:17.5%;
	top:7.75%;
	}
	
#signup input {
	display:inline-block;
	width:256px;
	height:45px;
	margin-top:5px;
	margin-left:5px;
	line-height:10px;
	
	padding:7px 10px;
	font-size:15px;
	
	color:gray;
	
	font-family:Candara;
	border: solid 1px #ddd;
	}
	
#signup input[type='submit']:hover{
	color:white;
	background-color:rgb(182,187,252);
	}
	
#signup input[type='submit']{
	color:rgb(182,187,252);
	border:1px solid rgb(182,187,252);
	background-color:white;
	margin-bottom:6px;
	}
	
	